<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>org.jetbrains.plugins.template</id>
    <id>com.github.ajaymamtora.ijutilities</id>
    <name>IJ Utilities</name>
    <vendor>JetBrains</vendor>

    <depends>com.intellij.modules.platform</depends>
    <actions>
        <action id="EqualizeWindows"
                class="com.github.ajaymamtora.ijutilities.EqualizeWindowsAction"
                text="Equalize Windows"
                description="Equalize the size of all editor windows">
            <add-to-group group-id="WindowMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="control EQUALS"/>
        </action>
        <action id="com.github.ajaymamtora.ijutilities.TerminalFocusAction"
                class="com.github.ajaymamtora.ijutilities.TerminalFocusAction" text="TerminalFocusAction">
            <add-to-group group-id="WindowMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
